<h2>Final Schedule Program</h2>

<p id="notice"><%= notice %></p>

<% if ! @record.nil? %>
  <table id='schedule_program_episode_info' class="display display_only">
    <thead>
      <tr>
        <th align="left">Field</th>
        <th align="left">Value</th>
      </tr>
    </thead>

    <tbody>
      <tr><td>Channel</td><td><%= ModelHandler.getField(Channel, @record["channel_id"], "name") %></td></tr>
      <tr><td>Date</td><td><%= @record["date"] %></td></tr>
      <tr><td>Program</td><td><%= ModelHandler.getField(Program, @record["program_id"], "name") %></td></tr>
      <tr><td>Episode</td><td><%= @record["episode"] %></td></tr>
      <tr><td>Hour</td><td><%= @record["hour"] %></td></tr>
      <tr><td>Minute</td><td><%= @record["minute"] %></td></tr>
      <tr><td>Second</td><td><%= @record["second"] %></td></tr>
      <tr><td>Remark</td><td><%= @record["remark"] %></td></tr>
      <tr><td>Created At</td><td><%= @record["created_at"] %></td></tr>
      <tr><td>Updated At</td><td><%= @record["updated_at"] %></td></tr>
    </tbody>
  </table>

  <br/>

  <%= link_to 'Edit', action: 'edit', id: @record["id"] %>
<% end %>
