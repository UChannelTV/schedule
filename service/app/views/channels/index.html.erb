<h2>Channels</h2>
<p id="notice"><%= notice %></p>

<table id='channel_list' class="display data_full">
  <thead>
    <tr>
      <th align="left">ID</th>
      <th align="left">Name</th>
      <th align="left">Timezone</th>
      <th align="left">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |channel| %>
      <tr>
        <td><%= link_to channel["id"], action: 'show', id: channel["id"] %></td>
        <td><%= channel["name"] %></td>
        <td><%= channel["timezone"] %></td>
        <td><%= link_to 'Delete', {action: 'destroy', id: channel["id"]}, method: 'delete', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
