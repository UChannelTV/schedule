<h3>Change Program Provider</h3>
<%= form_tag({:action => @refresh_action}, {:method => "PUT"}) do %>
  <table id='list_query' class="display display_only">
    <thead>
      <tr>
        <th align="left">Field</th>
        <th align="left">Value</th>
      </tr>
    </thead>

    <tbody>
      <tr><td>Provider</td><td><%= select_tag "provider_id", options_from_collection_for_select(Provider.all, "id", "name", @provider_id) %></td></tr>
    </tbody>
  </table>

  <p/>
  <div class="actions">
    <%= submit_tag 'Update Programs' %>
  </div>
<% end %>
<br/>
<br/>

<%= form_tag(@url, method: @method) do |f| %>
  <table id='schedule_program_info' class="display display_only">
    <thead>
      <tr>
        <th align="left">Field</th>
        <th align="left">Value</th>
      </tr>
    </thead>

    <tbody>
      <tr><td>Channel</td><td><%= select_tag "channel_id", options_from_collection_for_select(Channel.all, "id", "name", @record["channel_id"]) %></td></tr>
      <tr><td>Version</td><td><%= text_field_tag "version", @record["version"], size: "50", maxlength: "254"%></td></tr>
      <tr><td>Program</td><td><%= select_tag "program_id", options_from_collection_for_select(Program._find(@provider_id, 0, "all", 1000), "id", "name", @record["program_id"]) %></td></tr>
      <tr><td>Week Option</td><td><%= select_tag "week_option", options_for_select(@weekOptions, @record["week_option"]) %></td></tr>
      <tr><td>Episode Option</td><td><%= text_field_tag "episode_option", @record["episode_option"], size: "50", maxlength: "254"%></td></tr>
      <tr><td>Day</td><td><%= select_tag "day", options_for_select(@days, @record["day"]) %></td></tr>
      <tr><td>Hour</td><td><%= select_tag "hour", options_for_select(Array(0..23), @record["hour"]) %></td></tr>
      <tr><td>Minute</td><td><%= select_tag "minute", options_for_select(Array(0..59), @record["minute"]) %></td></tr>
      <tr><td>Second</td><td><%= select_tag "second", options_for_select(Array(0..59), @record["second"]) %></td></tr>
      <tr><td>Remark</td><td><%= text_field_tag "remark", @record["remark"], size: "50", maxlength: "254" %></td></tr>
    </tbody>
  </table>

  <p/>
  <div class="actions">
    <%= submit_tag 'Save' %>
  </div>
<% end %>
